{% extends '::admin.html.twig' %}


{% block body %}


        <h1>Liste de commandes</h1>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Reference</th>
                <th>date</th>
                <th> action </th>
            </tr>
            </thead>
            <tbody>
            {% for cm in commandes %}
                <tr>
                    <td>{{ cm.reference }}</td>
                    <td> {{ cm.date|date('d-m-Y') }}</td>
                    <td>  <a href="{{ path('AnnulerCommande', { 'id': cm.id }) }}"><i class="icon-remove"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    {% endblock %}


