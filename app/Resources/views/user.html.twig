{% extends '::admin.html.twig' %}


{% block body %}


    <h1>Liste des clients</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>E-mail</th>
            <th> action </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td> {{ user.email }}</td>
                <td>
                    <a href="{{ path('ActiveUser', { 'id': user.id }) }}"><i class="icon-unlock"></i></a>
                    <a href="{{ path('desActiveUser', { 'id': user.id }) }}"><i class="icon-lock"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}


