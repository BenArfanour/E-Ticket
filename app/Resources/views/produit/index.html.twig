{% extends '::admin.html.twig' %}

{% block body %}
    <h1>Liste des Billets</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Disponible</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.disponible }}</td>
                <td>
                    <a href="{{ path('produit_show', { 'id': produit.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('produit_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">
               Ajout√© une autre Billet
            </a>
        </li>
    </ul>
{% endblock %}
